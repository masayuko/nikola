## -*- coding: utf-8 -*-
<%inherit file="index.tmpl"/>

<%block name="extra_head">
    ${parent.extra_head()}
    %if len(translations) > 1 and feed_atom:
        %for language in sorted(translations):
            <link rel="alternate" type="application/atom+xml" title="Atom for the ${archive_name} section (${language})" href="${_link('archive_atom', archive_name, language)}">
        %endfor
    %elif feed_atom:
        <link rel="alternate" type="application/atom+xml" title="Atom for the ${archive_name} archive" href="${_link('archive_atom', archive_name)}">
    %endif
    %if len(translations) > 1 and feed_rss:
        %for language in sorted(translations):
            <link rel="alternate" type="application/rss+xml" title="RSS for the ${archive_name} section (${language})" href="${_link('archive_rss', archive_name, language)}">
        %endfor
    %elif feed_rss:
        <link rel="alternate" type="application/rss+xml" title="RSS for the ${archive_name} archive" href="${_link('archive_rss', archive_name)}">
    %endif
</%block>
