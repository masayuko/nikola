## -*- coding: utf-8 -*-
<%inherit file="index.tmpl"/>

<%block name="content_header">
    %if subcategories:
    ${messages('Subcategories:')}
    <ul>
        %for name, link in subcategories:
        <li><a href="${link}">${name|h}</a></li>
        %endfor
    </ul>
    %endif
</%block>

<%block name="extra_head">
    ${parent.extra_head()}
    %if len(translations) > 1 and feed_atom:
        %for language in sorted(translations):
            <link rel="alternate" type="application/atom+xml" title="Atom for the ${tag|h} section (${language})" href="${_link(kind + '_atom', tag, language)}">
        %endfor
    %elif feed_atom:
        <link rel="alternate" type="application/atom+xml" title="Atom for the ${tag|h} section" href="${_link(kind + _atom', tag)}">
    %endif
    %if len(translations) > 1 and feed_rss:
        %for language in sorted(translations):
            <link rel="alternate" type="application/rss+xml" title="RSS for the ${tag|h} section (${language})" href="${_link(kind + '_rss', tag, language)}">
        %endfor
    %elif feed_rss:
        <link rel="alternate" type="application/rss+xml" title="RSS for the ${tag|h} section" href="${_link(kind + _rss', tag)}">
    %endif
</%block>
